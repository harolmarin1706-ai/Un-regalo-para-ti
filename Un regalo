<script>
  document.addEventListener('DOMContentLoaded', () => {
    // helpers
    function escribirTexto(el, texto, velocidad=70) {
      return new Promise(resolve => {
        let i = 0;
        el.textContent = "";
        (function escribir(){
          if (i < texto.length) {
            el.textContent += texto.charAt(i++);
            setTimeout(escribir, velocidad);
          } else {
            resolve();
          }
        })();
      });
    }

    // refs
    const titulo1 = document.getElementById('titulo1');
    const titulo2 = document.getElementById('titulo2');
    const titulo3 = document.getElementById('titulo3');
    const subtitulo = document.getElementById('subtitulo');
    const mensaje = document.getElementById('mensaje');
    const boton = document.getElementById('boton');
    const inicio = document.getElementById('inicio');
    const flores = document.getElementById('flores');
    const falling = document.getElementById('falling');
    const fallingFloresContainer = document.getElementById('fallingFlores');

    // animaci√≥n de escritura secuencial y mostrar bot√≥n
    (async function intro(){
      await escribirTexto(titulo1, "FELIZ D√çA", 90);
      await escribirTexto(titulo2, "DE LAS FLORES", 90);
      await escribirTexto(titulo3, "AMARILLAS", 90);
      await escribirTexto(subtitulo, "MI NI√ëA ü§é", 90);
      await escribirTexto(mensaje, "TENGO UN REGALO PARA TI", 70);
      boton.classList.add('show');
    })();

    // crear destellos (inicio)
    function crearDestellosInicio(cantidad=20){
      if (!falling) return;
      for (let i=0;i<cantidad;i++){
        const d = document.createElement('div');
        d.className = 'drop';
        const size = 4 + Math.random()*12;
        d.style.width = size + 'px';
        d.style.height = size + 'px';
        d.style.left = (Math.random()*100) + 'vw';
        const dur = 3 + Math.random()*4;
        const delay = Math.random()*2;
        d.style.animationDuration = dur + 's';
        d.style.animationDelay = delay + 's';
        falling.appendChild(d);
        // eliminar despu√©s de que termine la animaci√≥n para no acumular
        setTimeout(()=> {
          if (d && d.parentNode) d.parentNode.removeChild(d);
        }, (dur + delay)*1000 + 1200);
      }
    }
    crearDestellosInicio(24);

    // crear destellos sobre flores (overlay) en bucle pero se eliminan cuando terminan
    function crearDestellosFlores(cantidad=30){
      if (!fallingFloresContainer) return;
      for (let i=0;i<cantidad;i++){
        const d = document.createElement('div');
        d.className = 'drop';
        const size = 4 + Math.random()*12;
        d.style.width = size + 'px';
        d.style.height = size + 'px';
        // distribuir sobre el ancho - un poco m√°s centrado si quieres:
        d.style.left = (Math.random()*100) + 'vw';
        const dur = 3 + Math.random()*5;
        const delay = Math.random()*2;
        d.style.animationDuration = dur + 's';
        d.style.animationDelay = delay + 's';
        fallingFloresContainer.appendChild(d);
        // eliminar cuando termine para no crecer indefinidamente
        setTimeout(()=> {
          if (d && d.parentNode) d.parentNode.removeChild(d);
        }, (dur + delay)*1000 + 1200);
      }
    }

    // al pulsar bot√≥n: ocultar inicio, mostrar flores y activar destellos en bucle
    let floresInterval = null;
    boton.addEventListener('click', (e) => {
      e.preventDefault();
      inicio.classList.add('fadeOut');
      setTimeout(() => {
        inicio.style.display = 'none';
        flores.classList.add('active');
        flores.setAttribute('aria-hidden','false');

        // stagger: mostrar cada flor con su peque√±o delay (data-delay)
        const flowers = flores.querySelectorAll('svg .flower');
        flowers.forEach((f, idx) => {
          const base = parseFloat(f.getAttribute('data-delay')) || 0;
          const delayMs = Math.round((base + idx*0.06) * 1000);
          setTimeout(()=> f.classList.add('show'), delayMs);
        });

        // iniciar lluvia de destellos sobre las flores
        crearDestellosFlores(60);
        // y a√±adir m√°s peri√≥dicamente para mantener sensaci√≥n de lluvia
        floresInterval = setInterval(()=> crearDestellosFlores(18), 3000);

      }, 360);
    });

    // limpieza cuando se abandona la p√°gina
    window.addEventListener('beforeunload', ()=>{
      if (floresInterval) clearInterval(floresInterval);
    });
  });
</script>
</body>
</html>

